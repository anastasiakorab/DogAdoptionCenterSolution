@model DopAdoption.Domain.DomainModels.AdoptionApplication

@{
    ViewData["Title"] = "Delete Application";
}

<h2 style="
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 2rem;
    color: #ff7f50;
    margin-top: 2rem;
    margin-bottom: 1rem;
">
    Delete Application
</h2>

<div style="
    background-color: rgba(255,239,230,0.9);
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
">
    <h4>Are you sure you want to delete this?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Dog</dt>
        <dd class="col-sm-9">@Model.Dog?.Name</dd>

        <dt class="col-sm-3">Adopter</dt>
        <dd class="col-sm-9">@Model.Adopter?.FullName</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Created On (UTC)</dt>
        <dd class="col-sm-9">@Model.CreatedOn.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>

    <form asp-action="Delete" method="post" style="margin-top: 1rem;">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn" style="background-color: #ff7f50; color: #fff;">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
