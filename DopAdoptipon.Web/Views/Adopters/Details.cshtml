@model DopAdoption.Domain.DomainModels.Adopter

@{
    ViewData["Title"] = "Adopter Details";
}

<div class="card mb-4" style="
    background-color: rgba(255, 239, 230, 0.9);
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    padding: 1rem;
">
    <h3 class="title mb-3" style="
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        font-size: 1.8rem;
        color: #ff7f50;
        letter-spacing: 0.5px;
    ">
        @Model.FullName
    </h3>

    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>

    @if (Model.Applications != null && Model.Applications.Any())
    {
        <h5>Applications (@Model.Applications.Count)</h5>
        <table class="table" style="background-color: rgba(255,239,230,0.85); border-radius: 8px;">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Created On (UTC)</th>
                    <th>Notes</th>
                    <th>Dog Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model.Applications.OrderByDescending(a => a.CreatedOn))
                {
                    <tr>
                        <td>@app.Status</td>
                        <td>@app.CreatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@app.Notes</td>
                        <td>@app.DogId</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn" style="border: 2px solid #ff7f50; color: #ff7f50;">Edit</a>
        <a asp-action="Index" class="btn" style="background-color: #ff7f50; color: #fff;">Back to List</a>
    </div>
</div>
