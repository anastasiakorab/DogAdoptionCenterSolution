@model DopAdoption.Domain.DomainModels.Breed

@{
    ViewData["Title"] = "Breed Details";
}

<div class="card mb-4" style="
    background-color: rgba(255, 239, 230, 0.9);
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    overflow: hidden;
    padding: 1rem;
">
    <h3 class="title mb-3" style="
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        font-size: 1.8rem;
        color: #ff7f50;
        letter-spacing: 0.5px;
    ">
        @Model.Name
    </h3>

    <div class="card-footer bg-white d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn" style="border: 2px solid #ff7f50; color: #ff7f50;">Edit</a>
        <a asp-action="Index" class="btn" style="background-color: #ff7f50; color: #fff;">Back to List</a>
    </div>
</div>
