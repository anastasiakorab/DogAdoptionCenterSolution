@model DopAdoption.Domain.DomainModels.Breed

@{
    ViewData["Title"] = "Delete Breed";
}

<h2 style="
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 2rem;
    color: #ff7f50;
    text-transform: capitalize;
    letter-spacing: 1px;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    margin-top: 2rem;
    margin-bottom: 1rem;
">
    Delete Breed
</h2>

<h4 style="
    font-family: 'Nunito', sans-serif;
    font-weight: 600;
    color: #374151;
    margin-bottom: 1rem;
">
    Are you sure you want to delete this?
</h4>

<div style="
    background-color: rgba(255, 239, 230, 0.9);
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
">
    <dl class="row" style="font-family: 'Nunito', sans-serif; font-weight: 500; letter-spacing: 0.3px;">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn" style="background-color: #ff7f50; color: #fff;">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
