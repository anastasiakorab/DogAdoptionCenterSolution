@model DopAdoption.Domain.DomainModels.Dog

@{
    ViewData["Title"] = "Edit Dog";
}

<h2>Edit Dog</h2>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    
    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    
    <div class="mb-3">
        <label asp-for="Sex" class="form-label"></label>
        <select asp-for="Sex" class="form-select" asp-items="ViewBag.Sexes"></select>
        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>

    
    <div class="mb-3">
        <label asp-for="BreedId" class="form-label">Breed</label>
        <select asp-for="BreedId" class="form-select" asp-items="@(ViewData["BreedId"] as SelectList)"></select>
        <span asp-validation-for="BreedId" class="text-danger"></span>
    </div>

    
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select" asp-items="ViewBag.Statuses"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
